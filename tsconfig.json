{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@prisma/*": ["prisma/*"]
    }
  },
  "include": ["server.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
